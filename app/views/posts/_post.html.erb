<div class="card w-full m-auto shadow-xl max-w-xs hover:bg-emerald-300">
  <%= link_to post_path(post), data: { turbo: false } do %>
    <div class="flex justify-start">
      <div class="avatar m-4">
        <div class="w-12 rounded-full">
          <%= image_tag post.user.avator_url %>
        </div>
      </div>
      <div class="my-auto">
        <%= post.user.name %>
      </div>
    </div>
    <div class="mx-4">
        <%= post.recipe_name %>
    </div>
  <% end %>
  <div class="flex justify-between">
    <div class="my-auto">
      <div class="m-4">
        <%= l post.created_at, format: :long %>
      </div>
    </div>
    <% if logged_in? %>
      <div class="m-4">
      </div>
    <% end %>
  </div>
</div>