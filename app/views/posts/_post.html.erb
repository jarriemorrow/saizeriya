<div class="card w-full m-auto shadow-xl max-w-xs hover:bg-emerald-300">
  <%= link_to post_path(post), data: { turbo: false } do %>
    <div class="flex justify-start">
      <div class="avatar m-4">
        <div class="w-12 mask mask-squircle">
          <%= image_tag post.first_image_url, alt: 'First Image' if post.first_image_url.present? %>
        </div>
      </div>
      <div class="my-auto">
        <%= post.user.name %>
      </div>
    </div>
    <div class="mx-4">
      <%= post.recipe_name %>
    </div>
    <div class="mx-4">
      <!-- 投稿画像のイメージが入るところ -->
      <%= image_tag post.user.avatar_url, class: 'rounded-xl w-72 h-72 object-cover' %>
    </div>
  <% end %>
  <div class="flex justify-between items-center mt-4 mx-4 mb-4">
    <div>
      <%= l post.created_at, format: :long %>
    </div>
    <% if logged_in? %>
      <div class="flex items-center">
        <%= render 'like_or_unlike', { post: post } %>
      </div>
    <% else %>
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="size-5">
          <path d="m11.645 20.91-.007-.003-.022-.012a15.247 15.247 0 0 1-.383-.218 25.18 25.18 0 0 1-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0 1 12 5.052 5.5 5.5 0 0 1 16.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 0 1-4.244 3.17 15.247 15.247 0 0 1-.383.219l-.022.012-.007.004-.003.001a.752.752 0 0 1-.704 0l-.003-.001Z" />
        </svg>
        <%= post.likes.count %>
      </div>
    <% end %>
  </div>
</div>
