<div class="mt-4 mb-20 mx-auto text-center">
  <%= render 'shared/search_form', q: @q, url: likes_posts_path %>
  <div>
    <% if @like_posts.present? %>
      <div class="my-3 mx-auto grid grid-cols-1 md:grid-cols-4 gap-3 max-w-5xl">
        <%= render @like_posts %>
      </div>
    <% else %>
      <p>いいねしてません</p>
    <% end %>
  </div>

  <div>
    <%= paginate @like_posts %>
  </div>

  <div>
    <%= link_to 'TOPへ戻る', root_path %>
  </div>
</div>