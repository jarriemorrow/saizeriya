<div class="mb-20 flex justify-center items-center">
  <%= form_with model: @user, local: true, class: 'w-full max-w-xs mx-auto' do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class='form-group mb-3'>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control input input-bordered input-sm w-full' %>
    </div>
    <div class='form-group mb-3'>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control input input-bordered input-sm w-full' %>
    </div>
    <div class='form-group mb-3'>
      <%= f.label :avatar %>
      <%= f.file_field :avatar, class: 'form-control file-input file-input-sm file-input-bordered w-full mb-3' %>
      <%= image_tag @user.avatar_url, class: 'h-50 w-50' %>
    </div>
    <div class='form-group text-center'>
      <%= f.submit class: 'btn btn-primary mb-3' %>
    </div>
  <% end %>
</div>
