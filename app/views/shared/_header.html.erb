<header class="navbar shadow-xl bg-neutral fixed top-0 z-50 w-full">
  <div class="navbar-start"></div>
  <div class="navbar-center">
    <%= link_to 'サイゼの最強の組み合わせ', "/", class: "btn btn-ghost text-xl text-white " %>
  </div>
  <div class="navbar-end drawer-end">
    <input id="my-drawer-4" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content">
      <!-- Page content here -->
      <label for="my-drawer-4" class="drawer-button btn btn-ghost">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block h-5 w-5 stroke-current">
         <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="white" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </label>
    </div>
    <div class="drawer-side">
      <label for="my-drawer-4" aria-label="close sidebar" class="drawer-overlay"></label>
      <div class="p-4 w-3/4 md:w-1/3 min-h-full bg-base-200 text-base-content">

      <ul class="menu bg-base-200 text-base-content min-h-full w-80 p-4">
        <!-- Sidebar content here -->
        <% if logged_in? %>
          <div><%= current_user.name %>でログインしています</div>
          <div><%= link_to '投稿一覧', posts_path %></div>
          <div class="mt:mb-50"><%= link_to '投稿する', posts_new_path %></div>
          <div><%= link_to 'いいね一覧', likes_posts_path %></div>
          <div><%= link_to 'マイページ', user_path(current_user) %></div>
          <div><%= link_to "ログアウト", logout_path, data: {turbo_method: :delete } %></div>
        <% else %>
          <div><%= link_to '投稿一覧', posts_path %></div>
          <div><%= link_to "ユーザー登録", new_user_path %></div>
          <div><%= link_to "ログイン", login_path %></div>  
        <% end %>
      </ul>
    </div>
  </div>
</header>