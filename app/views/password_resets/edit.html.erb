<div class="w-5/6 mx-auto my-4 max-w-screen-md mt-16">
  <div class="card w-full mx-auto mb-8 max-w-sm md:max-w-md shadow-lg rounded-lg bg-white p-6">
    <h3 class="text-lg font-semibold text-center mb-6">パスワード再設定</h3>

    <%= form_with model: @user, url: password_reset_path(@token), method: :patch, local: true, class: "space-y-4" do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :email, class: "block text-sm font-semibold mb-1" %>
        <div class="p-2 border border-gray-300 rounded bg-gray-100">
          <%= @user.email %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "block text-sm font-semibold mb-1" %>
        <%= f.password_field :password, class: "form-control input input-bordered w-full p-2 border rounded focus:ring focus:ring-blue-300" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "block text-sm font-semibold mb-1" %>
        <%= f.password_field :password_confirmation, class: "mb-2 form-control input input-bordered w-full p-2 border rounded focus:ring focus:ring-blue-300" %>
      </div>

      <div class="form-group">
        <%= f.submit 'リセット', class: "btn btn-primary w-full p-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= link_to "ログインに戻る", login_path, class: "text-blue-500 underline" %>
    </div>
  </div>
</div>
